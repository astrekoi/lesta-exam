# PostgreSQL Configuration
PGUSER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=db
POSTGRES_HOST=db
POSTGRES_PORT=5432
PGDATA=/var/lib/postgresql/data/pgdata

# PostgreSQL Performance Tuning
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_SHARED_BUFFERS=128MB
POSTGRES_WORK_MEM=4MB
POSTGRES_MAINTENANCE_WORK_MEM=64MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_WAL_BUFFERS=16MB
POSTGRES_CHECKPOINT_TARGET=0.9
POSTGRES_RANDOM_PAGE_COST=1.1
POSTGRES_LOG_STATEMENT=mod
POSTGRES_LOG_MIN_DURATION=1000

# Flask Application Configuration
FLASK_ENV=production
FLASK_DEBUG=0
API_PORT=5000
PYTHON_VERSION=3.10
BUILD_CONTEXT=./app
DOCKERFILE=Dockerfile

# Jenkins Configuration
JENKINS_PORT=9090
JENKINS_AGENT_PORT=50000
JENKINS_VERSION=2.504.2-lts
JENKINS_USER_ID=1000
JENKINS_GROUP_ID=1000
JENKINS_OPTS=--prefix=/jenkins
JENKINS_JAVA_OPTS=-Djenkins.install.runSetupWizard=false -Djava.awt.headless=true -Xmx1024m -Xms512m
JENKINS_UC_DOWNLOAD=http://updates.jenkins.io
# Port 80 = NGINX_PORT
JENKINS_URL=http://localhost:80/jenkins/

# Nginx Configuration
NGINX_PORT=80
NGINX_SSL_PORT=443
NGINX_VERSION=1.25-alpine
NGINX_TEMPLATE_SUFFIX=.template
NGINX_OUTPUT_DIR=/etc/nginx/conf.d

APP_DOMAIN=prod.ru
SSL_EMAIL=admin@prod.ru
SSL_TYPE=selfsigned

# Resource Limits
DB_MEMORY_LIMIT=512M
DB_CPU_LIMIT=0.5
DB_MEMORY_RESERVE=256M
DB_CPU_RESERVE=0.25

APP_MEMORY_LIMIT=256M
APP_CPU_LIMIT=0.3
APP_MEMORY_RESERVE=128M
APP_CPU_RESERVE=0.1

JENKINS_MEMORY_LIMIT=1.5G
JENKINS_CPU_LIMIT=1.0
JENKINS_MEMORY_RESERVE=512M
JENKINS_CPU_RESERVE=0.5

NGINX_MEMORY_LIMIT=128M
NGINX_CPU_LIMIT=0.2

# Network Configuration
NETWORK_NAME=exam_app_network
NETWORK_SUBNET=172.20.0.0/16
